{% layout 'layout.liquid' %}
{% block content %}
    <div class="container-sm">
        <form action="/cocktails" method="POST">
            <fieldset>
                <legend>Create New Cocktail:</legend>
                <label class="form-label">Name:</label>
                <input 
                    type="text" class="form-control" 
                    name="name" required 
                    placeholder="What kind of cocktail is it?">
                <label class="form-label">Base Spirit:</label>
                <input 
                    type="text" class="form-control" 
                    name="baseSpirit" required 
                    placeholder="What is the base spirit?">
                <label class="form-label">Shaken?</label>
                <input 
                    type="checkbox" class="form-check-control" 
                    name="shaken">
            </fieldset>
            <input type="submit" class="btn btn-success" value="Create">
        </form>
    </div>
{% endblock %}